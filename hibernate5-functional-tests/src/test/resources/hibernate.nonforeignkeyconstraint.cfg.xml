<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.pool_size">150</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/posmulten_hibernate</property>
        <property name="hibernate.connection.username">posmhib4-user</property>
        <property name="hibernate.connection.password">posmhib4-user</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.multiTenancy">SCHEMA</property>
        <property name="hibernate.multi_tenant_connection_provider">com.github.starnowski.posmulten.hibernate.hibernate5.connections.SharedSchemaMultiTenantConnectionProvider</property>
        <property name="hibernate.tenant_identifier_resolver">com.github.starnowski.posmulten.hibernate.hibernate5.CurrentTenantIdentifierResolverImpl</property>
        <property name="archive.autodetection">class</property>
        <property name="posmulten.schema.builder.provider">lightweight</property>

        <mapping class="com.github.starnowski.posmulten.hibernate.hibernate5.model.nonforeignkeyconstraint.Category" />
        <mapping class="com.github.starnowski.posmulten.hibernate.hibernate5.model.nonforeignkeyconstraint.Comment" />
        <mapping class="com.github.starnowski.posmulten.hibernate.hibernate5.model.nonforeignkeyconstraint.Post" />
        <mapping class="com.github.starnowski.posmulten.hibernate.hibernate5.model.nonforeignkeyconstraint.Tenant" />
        <mapping class="com.github.starnowski.posmulten.hibernate.hibernate5.model.nonforeignkeyconstraint.User" />
        <mapping class="com.github.starnowski.posmulten.hibernate.hibernate5.model.nonforeignkeyconstraint.UserRole" />
    </session-factory>
</hibernate-configuration>